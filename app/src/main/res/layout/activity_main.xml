<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">

    <Button

        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#E74C3C"
        android:onClick="redButton"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#8E44AD"
        android:layout_marginTop="10dp"
        android:onClick="purpleButton"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#49C3B5"
        android:layout_marginTop="10dp"
        android:onClick="skyButton"
         />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#F4D03F"
        android:layout_marginTop="10dp"
        android:onClick="yellowButton"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#3498DB"
        android:layout_marginTop="10dp"
        android:onClick="blueButton"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#28B463"
        android:layout_marginTop="10dp"
        android:onClick="greenButton"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#E67E22"
        android:layout_marginTop="10dp"
        android:onClick="orangeButton"
        />



</LinearLayout>